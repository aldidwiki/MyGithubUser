<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyGithubUser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryVariant">@color/dark_primary</item>
        <item name="colorOnPrimary">@color/white_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_200</item>
        <item name="colorSecondaryVariant">@color/secondary_700</item>
        <item name="colorOnSecondary">@color/white_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/dark_primary</item>
    </style>

    <style name="tabFollowsStyle">
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextColor">?attr/colorOnPrimary</item>
        <item name="tabBackground">?android:colorBackground</item>
        <item name="tabIndicatorColor">?attr/colorSecondary</item>
        <item name="tabSelectedTextColor">?attr/colorSecondary</item>
    </style>

</resources>